{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=127.0.0.1;Port=5432;Database=maa_dev;Username=maa;Password=devpass"
  },
  "SessionSettings": {
    "AnonymousTimeoutMinutes": 30,
    "AdminTimeoutHours": 8
  },
  "Jwt": {
    "Issuer": "maa-api",
    "Audience": "maa-client",
    "SecretKey": "PLACEHOLDER_TO_BE_OVERRIDDEN_BY_KEYVAULT_OR_ENV",
    "AccessTokenExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 7,
    "MaxConcurrentSessions": 3,
    "RefreshThresholdMinutes": 5
  },
  "Swagger": {
    "Enabled": true,
    "Title": "Medicaid Application Assistant API",
    "Version": "1.0.0",
    "Description": "API for handling Medicaid/CHIP applications with eligibility evaluation and session management"
  },
  "Azure": {
    "KeyVault": {
      "Uri": "https://maa-keyvault.vault.azure.net/"
    }
  }
}
